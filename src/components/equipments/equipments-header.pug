mixin equipments-header(active, img, num, title = "title", desc = "description")
    .lamps 
        .lamps__body.container 
            h2.lamps__title Наше оборудование
            .lamps__list 
                if active == 'audio'
                    a(href="#!").lamps__li.active
                        img(src="@img/lamps-icon-1.png", alt="").lamps__icon
                        .lamps__link Аудио 
                            span.lamps__link-primary.disable-xxl.enable-360 оборудование 
                else 
                    a(href="audio.html").lamps__li
                        img(src="@img/lamps-icon-1.png", alt="").lamps__icon
                        .lamps__link Аудио 
                            span.lamps__link-primary.disable-xxl.enable-360 оборудование 
                if active == 'video'
                    a(href="#!").lamps__li.active
                        img(src="@img/lamps-icon-2.png", alt="").lamps__icon
                        .lamps__link Видео 
                            span.lamps__link-primary.disable-xxl.enable-360 оборудование  
                else
                    a(href="video.html").lamps__li
                        img(src="@img/lamps-icon-2.png", alt="").lamps__icon
                        .lamps__link Видео 
                            span.lamps__link-primary.disable-xxl.enable-360 оборудование  
                if active == 'light'
                    a(href="#!").lamps__li.active
                        img(src="@img/lamps-icon-3.png", alt="").lamps__icon
                        .lamps__link Свет 
                            span.lamps__link-primary.disable-xxl.enable-360 оборудование 
                else 
                    a(href="light.html").lamps__li
                        img(src="@img/lamps-icon-3.png", alt="").lamps__icon
                        .lamps__link Свет 
                            span.lamps__link-primary.disable-xxl.enable-360 оборудование 
                if active == 'fon'
                    a(href="#!").lamps__li.active
                        img(src="@img/lamps-icon-4.png", alt="").lamps__icon
                        .lamps__link Фон
                else 
                    a(href="fon.html").lamps__li
                        img(src="@img/lamps-icon-4.png", alt="").lamps__icon
                        .lamps__link Фон
            div(class=`lamps__content lamps__content_${num}`)
                .lamps__left 
                    h3.lamps__left-title #{title}
                    p.lamps__left-p #{desc}
                .lamps__right 
                    img(src="@img/" + img + ".png", alt="" class=`lamps__img_${num}`)