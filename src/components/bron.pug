mixin bron()
    .bron   
        .bron__body.container 
            h2.bron__title Забронировать студию
            form(action="").bron__content 
                .bron__left.bron__col 
                    .bron__left-item
                        h3.bron__subtitle #[span 1.] Выберите студию
                        .bron__left-buttons 
                            .bron__left-button
                                input(type="radio", name="studios" hidden id="studios-1" checked)
                                label(for="studios-1") Студия м. Отрадное 
                            .bron__left-button
                                input(type="radio", name="studios" hidden id="studios-2")
                                label(for="studios-2") Студия м. Тульская
                    .bron__left-item
                        h3.bron__subtitle #[span 2.]  Выберите зону 
                        .bron__left-buttons 
                            .bron__left-button
                                input(type="radio", name="zona" hidden id="zona-1" checked)
                                label(for="zona-1") Малая зона 18 м² 1 900 руб/час
                            .bron__left-button
                                input(type="radio", name="zona" hidden id="zona-2")
                                label(for="zona-2") Средняя зона 25 м² 2 500 руб/час
                            .bron__left-button
                                input(type="radio", name="zona" hidden id="zona-3")
                                label(for="zona-3") Большая зона 47 м² 2 900 руб/час
                .bron__mid.bron__col 
                    h3.bron__subtitle #[span 3.] Выберите время:
                    .bron__datapicker                
                        .datepicker 
                        .bron__time
                            .bron__time-item
                                input(type="radio" name="time" id="time-9" hidden)
                                label(for="time-9") 9:00 
                            .bron__time-item
                                input(type="radio" name="time" id="time-10" hidden disabled)
                                label(for="time-10") 10:00 
                            .bron__time-item
                                input(type="radio" name="time" id="time-11" hidden disabled)
                                label(for="time-11") 11:00 
                            .bron__time-item
                                input(type="radio" name="time" id="time-12" hidden)
                                label(for="time-12") 12:00 
                            .bron__time-item
                                input(type="radio" name="time" id="time-13" hidden)
                                label(for="time-13") 13:00 
                            .bron__time-item
                                input(type="radio" name="time" id="time-14" hidden checked)
                                label(for="time-14") 14:00
                            .bron__time-item
                                input(type="radio" name="time" id="time-15" hidden)
                                label(for="time-15") 15:00
                            .bron__time-item
                                input(type="radio" name="time" id="time-16" hidden)
                                label(for="time-16") 16:00
                            .bron__time-item
                                input(type="radio" name="time" id="time-17" hidden)
                                label(for="time-17") 17:00
                            .bron__time-item
                                input(type="radio" name="time" id="time-18" hidden)
                                label(for="time-18") 18:00
                            .bron__time-item
                                input(type="radio" name="time" id="time-19" hidden)
                                label(for="time-19") 19:00
                            .bron__time-item
                                input(type="radio" name="time" id="time-20" hidden)
                                label(for="time-20") 20:00
                .bron__right.bron__col 
                    h3.bron__subtitle #[span 4.] Укажите свои контакты:
                    .bron__info 
                        img(src="@img/icon-calendar.svg", alt="" draggable="false")
                        p Запись на #[span 30/10/2021 14:00]
                    .bron__info 
                        img(src="@img/icon-time.svg", alt="" draggable="false")
                        p Всего времени: #[span 1 час]
                    .bron__info 
                        img(src="@img/item-card.svg", alt="" draggable="false")
                        p Итоговая сумма: #[span 1500р.]
                    .bron__right-item.first
                        input(type="text" required placeholder="ФИО").input.required
                        span 
                    .bron__right-item
                        input(type="tel" required placeholder="+7 ___ ___-__-__").input.required
                        span 
                    .bron__right-item
                        input(type="text" placeholder="Комментарий").input
                        span    
                    .terms.bron__terms
                        input(type="checkbox" checked)#terms.terms__checkbox
                        label(for="terms").terms__label Я принимаю условия пользовательского соглашения
                    .bron__right-btn 
                        button(type='submit').btn-secondary.bron__right-btn-button Забронировать зал   

